---
export interface Props {
    imageUrl: string
    description: string
}

const { imageUrl, description } = Astro.props
---

<div class="profile">
    <h2>Profile</h2>
    <img src={imageUrl} alt="Profile Image" class="profile-image" />
    <p class="profile-description" set:html={description} />
    <div class="profile-links">
        <a
            href="https://bsky.app/profile/fhhm.bsky.social"
            target="_blank"
            rel="noopener noreferrer"
        >
            <img
                src="/icon-bluesky.svg"
                alt="Bluesky"
                class="profile-link-icon"
            />
        </a>
        <a
            href="https://github.com/fhhmm"
            target="_blank"
            rel="noopener noreferrer"
        >
            <img
                src="/icon-github.svg"
                alt="GitHub"
                class="profile-link-icon"
            />
        </a>
    </div>
</div>

<style>
    .profile {
        text-align: center;
        margin-bottom: 2rem;
    }

    .profile h2 {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
        padding-left: 0.4rem;
        color: #666;
        font-size: 0.95rem;
    }

    .profile h2::before,
    .profile h2::after {
        content: '';
        flex: 1;
        height: 1px;
        background-color: #bbb;
        margin: 0 0.5rem;
    }

    .profile-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        margin-top: 1rem;
        margin-bottom: 0.5rem;
        border: 1px solid #bbb;
    }

    .profile-description {
        font-size: 0.9rem;
        line-height: 1.4;
        color: #333;
    }

    .profile-links {
        margin-top: 1rem;
        display: flex;
        justify-content: center;
        gap: 1rem;
    }

    .profile-link-icon {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        object-fit: cover;
    }
</style>
